/* pages/news/news.wxss */
.news-list{
  padding: 0 40rpx;
  padding-bottom: 120rpx;
}
.news-item{
  padding: 28rpx 38rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 12rpx 0px rgba(0,0,0,0.08);
  border-radius:20rpx;
  margin-bottom: 34rpx;
}
.news-item .title{
  font-size: 32rpx;
  color: #333;
  line-height: 38rpx;
  margin-bottom: 16rpx;
}
.news-item .title .img{
  width: 32rpx;
  height: 38rpx;
  margin-right: 18rpx;
  vertical-align: top;
}
.news-item .content{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #777;
  word-wrap:break-word
}
.no-img{
  width: 470rpx;
  height: 334rpx;
  margin-top: 100rpx;
}