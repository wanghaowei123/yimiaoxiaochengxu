/* components/home/header/header.wxss */
.header{
  height:300rpx;
  position: relative;
}
.content{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.avatar_box{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.left{
  display: flex;
  align-items: center;
  color: #fff;
  margin-left: 20rpx;
}
.avatar{
  height: 92rpx;
  width: 92rpx;
}
.avatar image{
  width: 100%;
  height: 100%;
}
.name{
  margin:0 10rpx;
}
.age{
  margin:0 10rpx;
}
.right{
  display: flex;
  align-items: center;
  color: #fff;
  margin-right: 20rpx;
}
.right_avatar{
  height: 40rpx;
  width: 40rpx;
}
.right_avatar image{
  width: 100%;
  height: 100%;
}
.text{
  font-size: 28rpx;
  margin-left:20rpx;
}
.sjx{
  width: 0;
  height: 0;
  border: 10rpx solid;
  border-color:#fff transparent transparent ;
  position: absolute;
  right: -30rpx;
  top: 20rpx;
}
.title{
  margin-left:20rpx;
  margin-bottom: 50rpx;
  display: inline-block;
  position: relative;
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}
