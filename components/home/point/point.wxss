/* components/home/point/point.wxss */
.point{
  display: flex;
}
.circle{
  display: inline-block;
  width:22rpx;
  height: 22rpx;
  border:1px solid #B7B7B7;
  border-radius: 50%;
  vertical-align: bottom;
}
.incircle{
  width:18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #B7B7B7;
  margin-left: 2rpx;
  margin-top: 2rpx;
}
.text{
  display: inline-block;
  vertical-align: bottom;
  padding:0;
  margin:0;
  color: #7B7B7B;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 10rpx;
}