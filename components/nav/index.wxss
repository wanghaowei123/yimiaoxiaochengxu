/* components/nav/index.wxss */
.nav-bar{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 6;
}
.nav-bar .text{
  text-align: center;
  font-size: 37rpx;
}
.nav-bar .arrow-wrap{
  position: absolute;
  left: 30rpx;
  width: 40rpx;
}
.nav-bar .arrow{
  position: absolute;
  left: 10rpx;
  top: 50%;
  margin-top: -9rpx;
  content: "";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 0 0 3rpx 3rpx;
  border-color: #333;
  border-style: solid;
  transform: rotate(45deg);
}