/* components/me/listcard/listcard.wxss */
.list_card{
  padding: 40rpx 0;
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 12px 0px rgba(0,0,0,0.08);
  border-radius:20px;
}
.arrow{
  width: 20rpx;
  height: 35rpx;
  position: absolute;
  right:40rpx;
  top: 50%;
  transform: translateY(-50%);
}
.image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left:40rpx;
  margin-right: 14rpx;
}
.name{
  font-size: 32rpx;
  margin-left: 10rpx;
  color: #777;
}
.age:after{
  content: "";
  position: absolute;
  left: 0;
  top: 15%;
  width: 1px;
  height: 70%;
  background-color: #777;
}
.age{
  position: relative;
  display: inline-block;
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #777;
  padding-left: 10rpx;
}
